Algoritmo "Exercicio2 - Conversor de Moedas"

Var
   reais, dolar, total: real



Inicio
      Escreva ("Quanto você tem em Real? R$")
      leia (reais)
      Escreva ("Qual a cotação do dólar, hoje? $")
      leia (dolar)
      total <- reais/dolar
      Escreva (" Você pode comprar $",total, " dólares.")


Fimalgoritmo